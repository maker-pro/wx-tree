/* pages/movie-detail/movie-detail.wxss */
.container {
    display: flex;
    flex-direction: column;
}

.head-image {
    height: 320rpx;
    width: 100%;
    -webkit-filter: blur(20px);
}

.movie-image {
    height: 238rpx;
    width: 175rpx;
    position: absolute;
    right: 30rpx;
    top: 170rpx;
}

.head-img-hover {
    height: 320rpx;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
}

.main-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #fff;
    letter-spacing: 2px;
    margin-top: 50rpx;
    margin-left: 40rpx;
}

.sub-title {
    font-size: 28rpx;
    color: #fff;
    margin-top: 50rpx;
    margin-left: 40rpx;
}

.like {
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
    margin-left: 40rpx;
}

.highlight-font {
    color: #f21146;
    margin-right: 10rpx;
    font-size: 22rpx;
}

.plain-font {
    color: #666;
    margin-right: 30rpx;
    font-size: 22rpx;
}

.summary {
    margin-left: 40rpx;
    margin-top: 40rpx;
    color: #777777;
}

.original-title {
    color: #1f3463;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
}

.flex-row {
    display: flex;
    flex-direction: row;
    align-items: baseline;
    margin-bottom: 10rpx;
}

.mark {
    margin-right: 30rpx;
    white-space: nowrap;
    color: #999999;
}

.rate-box {
    display: flex;
    flex-direction: row;
    align-items: baseline;
}

.rate-num {
    margin-left: 20rpx;
}

.hr {
    width: 100%;
    height: 1px;
    background-color: #d9d9d9;
    margin-top: 45rpx;
}

.original-title  {
    width: 75%;
}

.synopsis {
    display: flex;
    flex-direction: column;
    margin: 50rpx 40rpx;
}

.synopsis-font {
    color: #999;
}

.summary-content {
    margin-top: 20rpx;
    line-height: 40rpx;
    letter-spacing: 1px;
}

.casts {
    display: flex;
    flex-direction: column;
    margin-top: 40rpx;
    margin-left: 40rpx;
}

.cast-font {
    color: #999;
    margin-bottom: 40rpx;
}

.cast-image {
    width: 170rpx;
    height: 210rpx;
    margin-bottom: 10rpx;
}

.casts-container {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    margin-bottom: 50rpx;
    height: 320rpx;
}

.cast-container {
    display: flex;
    flex-direction: column;
    margin-right: 40rpx;
}