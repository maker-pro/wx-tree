<!--components/movie-list/index.wxml-->
<view class="container t-class">
    <view class="title-container">
        <text>{{title}}</text>
        <text class="more-text">更多></text>
    </view>
    <view class="movie-container">
        <block wx:for="{{movies}}" wx:key="id">
            <movie movie="{{item}}"></movie>
        </block>
    </view>
</view>